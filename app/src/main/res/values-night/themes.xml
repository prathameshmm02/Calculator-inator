<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_dark_primary</item>
        <item name="colorOnPrimary">@color/color_dark_onPrimary</item>
        <item name="colorPrimaryContainer">@color/color_dark_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/color_dark_onPrimaryContainer</item>
        <item name="colorSecondary">@color/color_dark_secondary</item>
        <item name="colorOnSecondary">@color/color_dark_onSecondary</item>
        <item name="colorSecondaryContainer">@color/color_dark_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/color_dark_onSecondaryContainer</item>
        <item name="colorTertiary">@color/color_dark_tertiary</item>
        <item name="colorOnTertiary">@color/color_dark_onTertiary</item>
        <item name="colorTertiaryContainer">@color/color_dark_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/color_dark_onTertiaryContainer</item>
        <item name="colorError">@color/color_dark_error</item>
        <item name="colorErrorContainer">@color/color_dark_errorContainer</item>
        <item name="colorOnError">@color/color_dark_onError</item>
        <item name="colorOnErrorContainer">@color/color_dark_onErrorContainer</item>
        <item name="android:colorBackground">@color/color_dark_background</item>
        <item name="colorOnBackground">@color/color_dark_onBackground</item>
        <item name="colorSurface">@color/color_dark_surface</item>
        <item name="colorOnSurface">@color/color_dark_onSurface</item>
        <item name="colorSurfaceVariant">@color/color_dark_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/color_dark_onSurfaceVariant</item>
        <item name="colorOutline">@color/color_dark_outline</item>
        <item name="colorOnSurfaceInverse">@color/color_dark_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/color_dark_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/color_dark_primaryInverse</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="ThemeOverlay.Calculator.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_blue_900</item>
        <item name="appWidgetTextColor">@color/light_blue_200</item>
        <item name="fontFamily">@font/poppins</item>
    </style>
